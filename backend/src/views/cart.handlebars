<div class="container">
  <h1>Mi Carrito</h1>
  <a href="/products" class="btn-back">← Volver a Productos</a>
  
  {{#if cart.products.length}}
    <div class="cart-items">
      {{#each cart.products}}
        <div class="cart-item">
          <div class="item-info">
            <h3>{{this.product.title}}</h3>
            <p>{{this.product.description}}</p>
            <p class="price">${{this.product.price}}</p>
          </div>
          
          <div class="item-quantity">
            <p>Cantidad: {{this.quantity}}</p>
            <p class="subtotal">Subtotal: ${{multiply this.product.price this.quantity}}</p>
          </div>
          
          <div class="item-actions">
            <button class="btn btn-remove" onclick="removeFromCart('{{../cartId}}', '{{this.product._id}}')">
              Eliminar
            </button>
          </div>
        </div>
      {{/each}}
    </div>
    
    <div class="cart-summary">
      <h2>Resumen</h2>
      <p class="total">Total: ${{calculateTotal cart.products}}</p>
      <button class="btn btn-clear" onclick="clearCart('{{cartId}}')">Vaciar Carrito</button>
    </div>
  {{else}}
    <div class="empty-cart">
      <p>Tu carrito está vacío</p>
      <a href="/products" class="btn">Ir a Productos</a>
    </div>
  {{/if}}
</div>

<script>
  async function removeFromCart(cartId, productId) {
    const response = await fetch(`/api/carts/${cartId}/products/${productId}`, {
      method: 'DELETE'
    });
    
    if (response.ok) {
      location.reload();
    }
  }
  
  async function clearCart(cartId) {
    const response = await fetch(`/api/carts/${cartId}`, {
      method: 'DELETE'
    });
    
    if (response.ok) {
      location.reload();
    }
  }
</script>

